<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.myProject.repogitory.BoardDAO">
	<insert id="insertBoard" parameterType="com.ezen.myProject.domain.BoardVO">
		insert into board(title, writer, content)
		values (#{title}, #{writer}, #{content})
	</insert>
	<select id="selectBoardList" resultType="com.ezen.myProject.domain.BoardVO">
	<!--isDel이 y이면 삭제로 간주  -->
		select * from board where isDel="N"
	</select>
	<select id="getDetail" resultType="com.ezen.myProject.domain.BoardVO">
		select * from board where bno=#{bno}
	</select>
	<update id="readCountUp">
		update board set read_count = read_count + 1 where bno=#{bno}
	</update>
	<update id="updateBoard">
		update board set title=#{title}, content=#{content} where bno=#{bno}
	</update>
	<update id="getdelete">
		update board set isDel  ="Y" where bno=#{bno}
	</update>
<!-- 페이징 처리  	
	<select id="selectBoardListPaging" resultType="com.ezen.myProject.domain.BoardVO">
		select * from board where isDel="N" order by bno desc limit #{pageStart},#{qty}
	</select> -->
	<!-- 서치 처리 -->
	<select id="selectBoardListPaging" resultType="com.ezen.myProject.domain.BoardVO">
		select * from board where isDel="N"
		<!--기존 구문에 서치문 추가  --> 
		<include refid="search"></include>
		order by bno desc limit #{pageStart},#{qty}
	</select>
	<sql id="search">
		<if test="type !=null">
			<trim prefix= "and (" suffix=")" prefixOverrides="OR">
				<!-- prefix,suffix에 값을 담으면 고정된 값을 가짐
					prefixOverrides 제외할 값					
				 -->
				 <foreach collection="typetoArray" item="type">
				 	<trim prefix="OR">
				 		<choose>
				 			<when test="type == 't'.toString()">
				 				<!-- %keyword% 하나로 인식되기 위해서 문자열연결함수 concat 사용 -->
				 				title like concat("%",#{keyword},"%")
				 			</when>
				 			<when test="type == 'c'.toString()">
				 				<!-- %keyword% 하나로 인식되기 위해서 문자열연결함수 concat 사용 -->
				 				content like concat("%",#{keyword},"%")
				 			</when>
				 			<when test="type == 'w'.toString()">
				 				<!-- %keyword% 하나로 인식되기 위해서 문자열연결함수 concat 사용 -->
				 				writer like concat("%",#{keyword},"%")
				 			</when>
				 		</choose>
				 	</trim>
				 </foreach>
			</trim>
		</if>
	</sql>
	<select id="totalCount" resultType="int">
		select count(bno) from board where isDel="N" 
		<include refid="search"></include>
	</select>
	<select id="searchTotalCount" resultType="int">
		select count(bno) from board where isDel="N" 
		<include refid="search"></include>
	</select>

</mapper>